<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MBoard" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="dialogCornerRadius">28dp</item>
    </style>

    <style name="Theme.MBoard.Keyboard">
        <item name="background">@color/keyboard_bg_light</item>
    </style>

    <style name="Theme.MBoard.Keyboard.Key">
        <item name="android:textSize">@dimen/key_text_size</item>
        <item name="android:textColor">@color/key_fg_light</item>
        <item name="marginHorizontal">@dimen/key_margin_horizontal</item>
        <item name="marginVertical">@dimen/key_margin_vertical</item>
        <item name="background">@drawable/key_bg</item>
        <item name="backgroundTint">@color/key_bg_static_light</item>
        <item name="iconTint">@color/key_fg_light</item>
    </style>

    <style name="Theme.MBoard.Keyboard.Key.Mod" parent="Theme.MBoard.Keyboard.Key">
        <item name="backgroundTint">@color/key_bg_static_light_mod</item>
    </style>

    <style name="Theme.MBoard.Keyboard.Key.Return" parent="Theme.MBoard.Keyboard.Key">
        <item name="backgroundTint">@color/key_bg_static_light_return</item>
        <item name="iconTint">@color/key_fg_light_return</item>
    </style>

    <style name="Theme.MBoard.Keyboard.KeyPopup">
        <item name="android:textSize">@dimen/key_popup_text_size</item>
        <item name="android:textColor">@color/key_fg_light</item>
        <item name="background">@drawable/key_popup_bg</item>
        <item name="backgroundTint">@color/key_bg_static_light</item>
        <item name="iconTint">@color/key_fg_light</item>
    </style>

    <style name="Theme.MBoard.Candidates">
        <item name="android:background">@color/keyboard_bg_light</item>
    </style>

    <style name="Theme.MBoard.Candidates.Item">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/candidate_text_size</item>
    </style>

</resources>