<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.github.lee0701.mboard.settings.ListPreference
        app:key="input_layout_preset"
        app:entries="@array/empty"
        app:entryValues="@array/empty"
        app:defaultValue="preset/preset_empty.yaml"
        app:title="@string/pref_layout_preset_title"
        app:summary="@string/pref_layout_preset_summary" />

    <io.github.lee0701.mboard.settings.PreferenceCategory
        app:title="@string/pref_soft_keyboard_header_title">

        <io.github.lee0701.mboard.settings.SwitchPreference
            app:key="soft_keyboard_default_height"
            app:defaultValue="false"
            app:title="@string/pref_appearance_default_height_title"
            app:summary="@string/pref_appearance_default_height_summary" />

        <io.github.lee0701.mboard.settings.SliderPreference
            app:key="soft_keyboard_row_height"
            app:valueFrom="30.0"
            app:valueTo="100.0"
            app:stepSize="5.0"
            app:defaultValue="@string/pref_appearance_keyboard_height_default"
            app:title="@string/pref_appearance_keyboard_height_title"
            app:useSimpleSummaryProvider="true"/>

    </io.github.lee0701.mboard.settings.PreferenceCategory>

    <io.github.lee0701.mboard.settings.PreferenceCategory
        app:key="input_layer"
        app:title="@string/pref_input_header_title">

        <io.github.lee0701.mboard.settings.ListPreference
            app:key="input_engine_type"
            app:defaultValue="Latin"
            app:entries="@array/input_engine_type_entries"
            app:entryValues="@array/input_engine_type_values"
            app:title="@string/pref_input_engine_type_title"
            app:useSimpleSummaryProvider="true" />

        <io.github.lee0701.mboard.settings.SwitchPreference
            app:key="input_show_candidates"
            app:defaultValue="false"
            app:title="@string/pref_input_show_candidates_title"
            app:summary="@string/pref_input_show_candidates_summary" />

        <io.github.lee0701.mboard.settings.SwitchPreference
            app:key="input_hanja_conversion"
            app:defaultValue="false"
            app:title="@string/pref_input_hanja_conversion_title"
            android:summary="@string/pref_input_hanja_conversion_summary" />

        <io.github.lee0701.mboard.settings.SwitchPreference
            app:key="input_hanja_prediction"
            app:defaultValue="false"
            app:title="@string/pref_input_hanja_prediction_title"
            android:summary="@string/pref_input_hanja_prediction_summary" />

        <io.github.lee0701.mboard.settings.SwitchPreference
            app:key="input_hanja_sort_by_context"
            app:defaultValue="false"
            app:title="@string/pref_input_hanja_sort_by_context_title"
            android:summary="@string/pref_input_hanja_sort_by_context_summary" />

        <io.github.lee0701.mboard.settings.MultiSelectListPreference
            app:key="input_hanja_additional_dictionaries"
            app:entries="@array/additional_dictionaries"
            app:entryValues="@array/additional_dictionary_values"
            app:defaultValue="@array/additional_dictionary_defaults"
            app:title="@string/pref_input_hanja_additional_dictionaries_title" />

    </io.github.lee0701.mboard.settings.PreferenceCategory>

</PreferenceScreen>