<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/pref_header_behaviour_title">

        <SwitchPreferenceCompat
            app:key="behaviour_show_popups"
            app:defaultValue="true"
            app:title="@string/pref_behaviour_show_popups_title" />

        <io.github.lee0701.mboard.settings.IntEditTextPreference
            app:key="behaviour_longpress_duration"
            app:defaultValue="1000"
            app:title="@string/pref_behaviour_longpress_duration_title"
            app:useSimpleSummaryProvider="true" />

        <io.github.lee0701.mboard.settings.IntEditTextPreference
            app:key="behaviour_repeat_interval"
            app:defaultValue="50"
            app:title="@string/pref_behaviour_repeat_interval_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_layout_title">

        <ListPreference
            app:key="layout_hangul_preset"
            app:defaultValue="layout_3set_390"
            app:entries="@array/layout_hangul_presets"
            app:entryValues="@array/layout_hangul_preset_values"
            app:title="@string/pref_layout_hangul_preset_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="layout_latin_preset"
            app:defaultValue="layout_qwerty"
            app:entries="@array/layout_latin_presets"
            app:entryValues="@array/layout_latin_preset_values"
            app:title="@string/pref_layout_latin_preset_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>